<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zeeshan.courtcounter.MainActivity"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team A"
                    android:textSize="30dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="60dp"
                    android:textAlignment="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:id="@+id/textView_TeamAScore"/>
                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="+3 Points"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:background="#FF8A65"
                    android:layout_marginBottom="20dp"
                    android:onClick="add3PointstoA"/>
                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="+2 Points"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:background="#FF8A65"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="add2PointstoA"/>
                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Free Throw"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:background="#FF8A65"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="add1PointToAFreeThrow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team B"
                    android:textSize="30dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="60dp"
                    android:textAlignment="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:id="@+id/textView_TeamBScore"/>
                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="+3 Points"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:background="#FF8A65"
                    android:layout_marginBottom="20dp"
                    android:onClick="add3PointstoB"/>
                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="+2 Points"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:background="#FF8A65"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="add2PointstoB"/>
                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Free Throw"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:background="#FF8A65"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="add1PointToBFreeThrow"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textAlignment="center"
        android:textSize="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="#FF8A65"
        android:textColor="#FBE9E7"
        android:onClick="resetScore"/>
</RelativeLayout>
